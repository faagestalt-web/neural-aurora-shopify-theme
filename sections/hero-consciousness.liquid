<div class="relative min-h-[80vh] flex flex-col items-center justify-center text-center overflow-hidden py-20" x-data="{ 
    text: '', 
    fullText: 'Technology that serves consciousness, not the reverse...',
    index: 0,
    type() {
      if (this.index < this.fullText.length) {
        this.text += this.fullText.charAt(this.index);
        this.index++;
        setTimeout(() => this.type(), 50);
      }
    }
}" x-init="type()">

  <!-- Background Elements -->
  <div class="absolute inset-0 bg-grid-pattern opacity-10 pointer-events-none"></div>
  <div class="glow-orb" style="top: 50%; left: 50%; transform: translate(-50%, -50%);"></div>

  <!-- Content -->
  <div class="relative z-10 container">
    <div class="mb-8 flex justify-center">
      <div class="w-20 h-20 bg-white/5 rounded-full flex items-center justify-center border border-white/10 backdrop-blur-md">
        <!-- Abstract Brain/Node Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#14b8a6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 16a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"/>
          <path d="M3 12h1m8-9v1m8 8h1m-9 8v1M5.6 5.6l.7.7m12.1-.7-.7.7m0 12.1.7.7m-12.1-.7-.7.7"/>
        </svg>
      </div>
    </div>

    <h1 class="h1 mb-6">
      GestaltView<br>
      <span class="text-gradient">Superintelligence Sidekick Engine</span>
    </h1>

    <div class="h-16 text-lg font-mono mb-10 text-gray-300">
      <span x-text="text"></span><span class="animate-pulse">|</span>
    </div>

    <div class="mt-8 flex gap-4 justify-center">
      <a href="/products/gestaltview-ai-collaborator-engine" class="btn-primary">
        Start Your Partnership
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Superintelligence Hero",
  "presets": [
    {
      "name": "Default"
    }
  ]
}
{% endschema %}
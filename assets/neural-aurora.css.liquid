/* Neural Aurora Theme - Liquid Port */
:root {
  /* Primitive Color Tokens */
  --gv-charcoal: {{ settings.bg_color }};
  --gv-teal-300: #32b8c6;
  --gv-teal-500: {{ settings.accent_primary }};
  --gv-cream: {{ settings.text_main }};
  
  /* Glass Effects */
  --gv-glass-light: rgba(245, 245, 245, 0.07);
  --gv-glass-medium: rgba(245, 245, 245, 0.10);
  --gv-glass-strong: rgba(245, 245, 245, 0.15);
  
  /* Fonts */
  --font-heading: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
  --font-mono: "Berkeley Mono", {{ settings.font_body.family }}, monospace;
}

body {
  background-color: var(--gv-charcoal);
  color: var(--gv-cream);
  font-family: var(--font-heading);
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

/* Utility Class: The Neural Gradient Text */
.text-gradient {
  background: linear-gradient(to right, var(--gv-teal-300), #a78bfa, var(--gv-teal-300));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  background-size: 200% auto;
  animation: shine 4s linear infinite;
}

/* Component: Glass Card (Exhibit Style) */
.exhibit-card {
  background: var(--gv-glass-light);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 2rem;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  backdrop-filter: blur(12px);
}

.exhibit-card:hover {
  background: var(--gv-glass-medium);
  transform: translateY(-4px);
  box-shadow: 0 10px 30px -10px rgba(50, 184, 198, 0.3);
  border-color: var(--gv-teal-500);
}

@keyframes shine {
  to { background-position: 200% center; }
}